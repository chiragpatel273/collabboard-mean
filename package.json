{
  "name": "collabboard-mean",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"yellow,cyan\" \"npm run server:dev\" \"npm run client:start\"",
    "start": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"yellow,cyan\" \"npm run server:start\" \"npm run client:build\"",
    "build": "npm run server:build && npm run client:build",
    "server:dev": "cd packages/server && npm run dev",
    "server:start": "cd packages/server && npm run start",
    "server:build": "cd packages/server && npm run build",
    "client:start": "cd packages/client && npm run start",
    "client:build": "cd packages/client && npm run build",
    "install:all": "npm install && npm run install:server && npm run install:client",
    "install:server": "cd packages/server && npm install",
    "install:client": "cd packages/client && npm install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:server": "prettier --write packages/server/src/**/*.{ts,js,json}",
    "format:client": "prettier --write packages/client/src/**/*.{ts,html,css,scss,json}"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/prettier": "^3.0.0",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2"
  }
}
